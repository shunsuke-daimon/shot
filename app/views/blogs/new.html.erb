<% if @blog.errors.any? %>
  <div id="error_explanation">
    <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @blog.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>新しいTweet</h1>

<%= form_with(model:@blog,local:true, url:choose_new_or_edit )do |form| %>

<div class ="tweet">
  <%= form.label :"内容" %>
  <%= form.text_field :content %>
</div>
<h1 class="btn btn-primary" role="button"><%= form.submit 'Tweetする'%></h1>
<h1 class="btn btn-primary" role="button"><%= link_to '一覧にもどる', blogs_path %></h1>

<% end %>
